<!-- src/views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    /* Basic Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Body Styling */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    /* Header Styling */
    h1 {
      font-size: 2.5em;
      margin-bottom: 20px;
      color: #2c3e50;
    }

    /* Paragraph Styling */
    p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    /* Links Styling */
    a {
      text-decoration: none;
      font-size: 1.1em;
      color: #3498db;
      margin: 0 15px;
      transition: color 0.3s ease;
    }

    a:hover {
      color: #2980b9;
    }

    /* Button Styling (For login/register buttons in the future) */
    button {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 1.1em;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>
  <h1>Welcome to the Home Page</h1>
  <p>Choose an action:</p>
  <p><a href="/register">Register</a> | <a href="/login">Login</a></p>

  <!-- Optional: Add buttons for further navigation -->
  <p>Or go to your <button onclick="window.location.href='/dashboard'">Dashboard</button></p>
</body>
</html>
